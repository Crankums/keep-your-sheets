<%# name %>
<%# username %>
<%# email %>
<%# handles* %>
<%# password %>
<%# age, city, state* %>
<%# bio/headline/catch phrase* %>
<%# submit %>

<form action='/users' method="POST">
    Username: <input type='text' name='username' id='username'><br><br>

    Email: <input type='text' name='email' id='email'><br><br>
    Password: <input type='password' name='password' id='password'><br><br>
    <%# confirm password %>
    Age: <input type='text' name='age' id='age' placeholder="Optional"><br><br>
    City: <input type='text' name='city' id='city' placeholder="Optional"><br><br>
    State: <input type='text' name='state' id='state' placeholder="Optional"><br><br>
    Tell us a little about yourself, and put any of your other handles (Twitter, Instagram, Twitch, etc) here: <br><textarea name="bio" id="bio" placeholder="Optional"></textarea><br><br>
    <input type="submit" value="Create New User">
</form>

<% if @user && @user.errors.any?%>
        <% @user.errors.full_messages.each do |e|%>
        <p class="danger"><%= e %></p>
    <% end %>
<% end %>